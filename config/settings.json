{
  "discord": {
    "bot_token": "YOUR_DISCORD_BOT_TOKEN_HERE", //setup an .env for better security, hardcoding is fine aswell (just not as secure)
    "guild_id": null,
    "activation_threshold": 0.85,
    "message_history_count": 20,
    "command_cooldown_seconds": 3,
    "max_actions_per_hour": 10
  },
  "openai": {
    "api_key": "YOUR_OPENAI_API_KEY_HERE", //setup an .env for better security
    "main_model": "gpt-4o", //scribble's main model
    "profiler_model": "gpt-3.5-turbo", //scribble's profiler model (records user traits)
    "memory_model": "gpt-3.5-turbo", //scribble's memory model (record long-term memory)
    "max_tokens": {
      "main": 500,
      "profiler": 200,
      "memory": 300
    },
    "temperature": {
      "main": 0.8,
      "profiler": 0.3,
      "memory": 0.5
    }
  },
  "google_images": {
    "api_key": "YOUR_GOOGLE_API_KEY_HERE", //setup an .env for better security
    "search_engine_id": "YOUR_SEARCH_ENGINE_ID_HERE", //setup an .env for better security
    "max_results": 10,
    "max_images_to_post": 5,
    "safe_sites": [], // doesn't work atm - images are limited to public domain and safe-search enabled
    "safe_search": "active"
  },
  "response": {
    "name_closeness_threshold": 85, // 0-100, how close a word needs to be to 'scribble' to trigger a response
    "random_response_chance": 10, // 1-100, percentage chance to respond to any message (in non-blacklisted channels) regardless of saying Scribble
    "wake_word": "scribble", // The wake word to activate conversation mode
    "conversation_timeout_minutes": 10, // Minutes of inactivity before conversation mode deactivates
    "enable_wake_word_mode": true // Enable/disable wake word conversation mode
  },
  "character": {
    "name": "Scribble",
    "server_name": "Tiny Ninos",
    "role": "chancellor",
    "status_message": "over Tiny Ninos as chancellor! uwu",
    "status_type": "watching",
    "max_memory_entries": 100,
    "memory_cleanup_threshold": 150
  },
  "safety": {
    "admin_user_ids": [],
    "protected_user_ids": [],
    "max_timeout_minutes": 60,
    "enable_bans": true,
    "enable_timeouts": true,
    "enable_nicknames": true
  },
  "logging": {
    "level": "INFO",
    "log_file": "logs/scribble.log",
    "log_ai_calls": true
  },
  "debug": {
    "raw_output": false,
    "log_to_terminal": false
  },
  "voice": {
    "enabled": true, // Enable/disable voice functionality
    "random_sound_chance": 100, // 0-100, percentage chance to play another sound after each one
    "min_interval_seconds": 30, // Minimum seconds between sounds
    "max_interval_seconds": 120, // Maximum seconds between sounds
    "disconnect_chance": 15, // 0-100, percentage chance to disconnect after each sound
    "volume": 0.3, // Volume level (0.0 to 1.0)
    "supported_formats": [".mp3", ".ogg"], // Supported audio file formats
    "disconnect_delay_seconds": 1, // Seconds to wait before disconnecting
    "image_post_delay_seconds": 0.5, // Seconds between posting multiple images
    "connection_timeout_seconds": 20.0 // Timeout for voice connection attempts
  }
}
